{
  "connection": "default",
  "collectionName": "comment",
  "info": {
    "name": "comment",
    "description": "Comments on other content types"
  },
  "options": {
    "timestamps": [
      "createdAt",
      "updatedAt"
    ]
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "content": {
      "type": "text"
    },
    "plan": {
      "model": "plan",
      "via": "comments"
    },
    "createdAt": {
      "type": "date"
    },
    "parent": {
      "model": "comment",
      "via": "children"
    },
    "children": {
      "collection": "comment",
      "via": "parent"
    },
    "user": {
      "model": "user",
      "via": "comments",
      "plugin": "users-permissions"
    }
  }
}